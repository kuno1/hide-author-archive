<?xml version="1.0"?>
<ruleset name="hide-author-archive">
	<description>PHP CodeSniffer rules for Hide Author Archive</description>

	<!-- Use HM Coding Standards -->
	<rule ref="vendor/humanmade/coding-standards">
		<!-- Don't restrict namespaced functions to `namespace.php` -->
		<exclude name="HM.Files.FunctionFileName.WrongFile" />
		<!-- Ignore directory naming rules that turn namespace Foo_Bar into directory foo_bar. -->
		<exclude name="HM.Files.NamespaceDirectoryName" />
		<exclude name="WordPress.WP.CapitalPDangit.Misspelled" />
		<!-- Altis uses PHP 7.2 or later, disregard PHP 7.1 warnings around "object" type. -->
		<exclude name="PHPCompatibility.FunctionDeclarations.NewParamTypeDeclarations.objectFound" />
		<exclude name="PHPCompatibility.FunctionDeclarations.NewReturnTypeDeclarations.objectFound" />
		<!-- End letter is not always English way. -->
		<exclude name="Squiz.Commenting.InlineComment.InvalidEndChar" />
		<exclude name="Generic.Commenting.DocComment.LongNotCapital" />
		<exclude name="PSR1.Files.SideEffects.FoundWithSymbols" />
		<exclude name="HM.Functions.NamespacedFunctions.MissingNamespace" />
	</rule>

	<!-- Allow / (forward slash) in hook names. -->
	<rule ref="WordPress.NamingConventions.ValidHookName">
		<properties>
			<property name="additionalWordDelimiters" value="/" />
		</properties>
	</rule>

	<arg name="extensions" value="php" />

	<!-- Ignored files & directories -->
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/tests/*</exclude-pattern>
</ruleset>
